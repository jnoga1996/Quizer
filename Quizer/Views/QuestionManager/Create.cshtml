@model Quizer.Models.QuestionModelView

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>QuestionModelView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Question.Text" class="control-label"></label>
                <input asp-for="Question.Text" class="form-control" />
                <span asp-validation-for="Question.Text" class="text-danger"></span>
            </div>

            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group">
                    <label asp-for="Answers[i].Text" class="control-label"></label>
                    <input asp-for="Answers[i].Text" class="form-control" />
                    <span asp-validation-for="Answers[i].Text" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="CorrectAnswerId" class="control-label"></label>
                <select asp-for="CorrectAnswerId" asp-items="ViewBag.CorrectAnswerNumbers" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
